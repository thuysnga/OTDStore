@model OTDStore.ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Đăng kí";
    Layout = "~/Views/Account/Shared/_Layout.cshtml";
}

<div class="app">
    <div class="login">
        <div class="login-box">
            <div class="register-col">
                <form asp-action="Register" asp-controller="Account" method="post" class="login-div">
                    <div>
                        <a href="/Account/Login"><i class="fas fa-arrow-left"></i> </a>
                        <h1 class="register-name">Đăng Ký</h1>                        
                    </div>
                    <div class="register-div">
                        <div class="register-col-1">
                            <div class="register-col-div">
                                <input type="text" asp-for="LastName" placeholder="Họ" class="register-input">
                                <div>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="register-col-div">
                                <input type="text" asp-for="FirstName" placeholder="Tên" class="register-input">
                                <div>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="register-col-div">
                                <input type="date" asp-for="Dob" class="register-input">
                                <div>
                                    <span asp-validation-for="Dob" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="register-col-div">
                                <input type="text" asp-for="Email" placeholder="Email" class="register-input">
                                <div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="register-col-div">
                                <input type="text" asp-for="Address" placeholder="Địa chỉ" class="register-input">
                                <div>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="register-col-2">
                            <div class="register-col-div">
                                <input type="text" asp-for="PhoneNumber" placeholder="Số điện thoại" class="register-input">
                                <div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="register-col-div">
                                <input type="text" asp-for="UserName" placeholder="Tài khoản" class="register-input">
                                <div>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="register-col-div">
                                <input type="password" asp-for="Password" placeholder="Mật khẩu" class="register-input">
                                <div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="register-col-div">
                                <input type="password" asp-for="ConfirmPassword" placeholder="Xác nhận mật khẩu" class="register-input">
                                <div>
                                    <span asp-validation-summary="ModelOnly" class="text-danger "></span>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="register-col-div">
                                <button type="submit" value="Register" class="login-btn register-btn">Đăng Ký</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
