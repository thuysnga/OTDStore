@model OTDStore.ViewModels.System.Users.PasswordUpdateRequest

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="about">
    <div class="account">
        <div class="account__nav">
            <a href="/Account/Edit">
                <div class="account__nav--profile">Thông tin cá nhân</div>
            </a>
            <div class="account__nav--profile">Đổi mật khẩu</div>
            <a href="/Account/Order">
                <div class="account__nav--profile">Đơn hàng</div>
            </a>
        </div>
        <div class="account__info">
            <h2>Đổi mật khẩu</h2>
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Lưu" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>
